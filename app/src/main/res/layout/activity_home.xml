<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".HomeActivity.HomeActivity">

    <Button
        android:id="@+id/btn_update2"
        android:layout_width="105dp"
        android:layout_height="140dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:drawableTop="@mipmap/ic_launcher"
        android:text="parcel Info"
        app:layout_constraintBottom_toBottomOf="@+id/btn_update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_update"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="105dp"
        android:layout_height="140dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:drawableTop="@mipmap/ic_launcher"
        android:text="payment For parcel"
        app:layout_constraintBottom_toBottomOf="@+id/btn_deliber"
        app:layout_constraintEnd_toStartOf="@+id/btn_update2"
        app:layout_constraintStart_toEndOf="@+id/btn_deliber"
        app:layout_constraintTop_toTopOf="@+id/btn_deliber" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/xoxocover" />

    <Button
        android:id="@+id/btn_deliber"
        android:layout_width="105dp"
        android:layout_height="140dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:drawableTop="@mipmap/ic_launcher"
        android:text="deliver your parcel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />


</androidx.constraintlayout.widget.ConstraintLayout>